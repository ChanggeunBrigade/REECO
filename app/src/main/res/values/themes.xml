<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.REECO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Custom Style 적용 -->
    </style>

    <!-- 파란 버튼 스타일 -->
    <style name="CustomButtonBlueStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_nostroke_bluecolor</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 빨간색 버튼 스타일 -->
    <style name="CustomButtonRedStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_nostroke_redcolor</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 빨간색 버튼 스타일 -->
    <style name="CustomButtonGrayStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_nostroke_graycolor</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 흰색 외곽선 버튼 스타일 -->
    <style name="CustomButtonWhiteStrokeStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_with_stroke</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 타이틀 텍스트뷰 스타일 -->
    <style name="CustomTextViewTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!-- 커스텀 텍스트뷰 스타일 -->
    <style name="CustomTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#494949</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- EditText 스타일 -->
    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:background">@drawable/edittext_rectangle_with_stroke</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Splash Activity 타이틀, 액션바 제거 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>