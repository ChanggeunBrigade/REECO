<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        style="@style/CustomTextViewTitleStyle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="서버 정보 입력" />

    <EditText
        android:id="@+id/edt_server_name"
        style="@style/CustomEditTextStyle"
        android:hint="Server Name" />

    <EditText
        android:id="@+id/edt_ip_addr"
        style="@style/CustomEditTextStyle"
        android:hint="IP Address" />

    <EditText
        android:id="@+id/edt_port_num"
        style="@style/CustomEditTextStyle"
        android:hint="Port Number" />

    <EditText
        android:id="@+id/edt_user_name"
        style="@style/CustomEditTextStyle"
        android:hint="Username" />

    <EditText
        android:id="@+id/edt_password"
        style="@style/CustomEditTextStyle"
        android:hint="Password"
        android:inputType="textPassword" />

    <android.widget.Button
        android:id="@+id/btn_server_confirm"
        style="@style/CustomButtonBlueStyle"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="서버 추가" />

</LinearLayout>