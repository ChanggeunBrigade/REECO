<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <com.amrdeveloper.codeview.CodeView
        android:id="@+id/edt_codeWrite"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rectangle_with_stroke"
        android:dropDownWidth="150dp"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownSelector="@color/black"
        android:fontFamily="@font/hack"
        android:gravity="top"
        android:padding="15dp"
        android:scrollHorizontally="true"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_openFile"
            style="@style/CustomButtonWhiteStrokeStyle"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="파일 열기" />

        <android.widget.Button
            android:id="@+id/btn_saveFile"
            style="@style/CustomButtonWhiteStrokeStyle"
            android:layout_weight="1"
            android:text="파일 저장" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_compile"
        style="@style/CustomButtonWhiteStrokeStyle"
        android:layout_weight="1"
        android:text="컴파일" />

</LinearLayout>